{
    "name": "kais-oueriemmi-auth-system",
    "version": "1.0.0",
    "description": "Production-ready authentication and authorization system by Kais OUERIEMMI",
    "main": "dist/server.js",
    "scripts": {
        "dev": "nodemon --exec ts-node src/server.ts",
        "build": "tsc",
        "start": "node dist/server.js",
        "test": "jest --coverage",
        "test:watch": "jest --watch",
        "test:security": "jest --testPathPattern=security",
        "lint": "eslint src --ext .ts",
        "migrate": "ts-node src/database/migrate.ts",
        "generate:keys": "ts-node src/scripts/generateKeys.ts",
        "audit": "npm audit --audit-level=moderate"
    },
    "keywords": [
        "authentication",
        "authorization",
        "oauth2",
        "openid-connect",
        "security",
        "jwt",
        "mfa",
        "totp"
    ],
    "author": "Kais OUERIEMMI",
    "license": "MIT",
    "dependencies": {
        "express": "^4.18.2",
        "express-rate-limit": "^7.1.5",
        "rate-limit-redis": "^4.2.0",
        "argon2": "^0.31.2",
        "jsonwebtoken": "^9.0.2",
        "passport": "^0.7.0",
        "passport-google-oauth20": "^2.0.0",
        "passport-github2": "^0.1.12",
        "passport-jwt": "^4.0.1",
        "otplib": "^12.0.1",
        "qrcode": "^1.5.3",
        "nodemailer": "^6.9.7",
        "cookie-parser": "^1.4.6",
        "cors": "^2.8.5",
        "helmet": "^7.1.0",
        "express-validator": "^7.0.1",
        "pg": "^8.11.3",
        "redis": "^4.6.11",
        "dotenv": "^16.3.1",
        "uuid": "^9.0.1",
        "crypto": "^1.0.1",
        "speakeasy": "^2.0.0",
        "csrf-csrf": "^3.0.0",
        "winston": "^3.11.0",
        "rate-limiter-flexible": "^5.0.0"
    },
    "devDependencies": {
        "@types/express": "^4.17.21",
        "@types/node": "^20.10.5",
        "@types/passport": "^1.0.16",
        "@types/passport-google-oauth20": "^2.0.14",
        "@types/passport-github2": "^1.2.9",
        "@types/passport-jwt": "^3.0.13",
        "@types/jsonwebtoken": "^9.0.5",
        "@types/cookie-parser": "^1.4.6",
        "@types/cors": "^2.8.17",
        "@types/nodemailer": "^6.4.14",
        "@types/uuid": "^9.0.7",
        "@types/qrcode": "^1.5.5",
        "@types/jest": "^29.5.11",
        "@types/supertest": "^6.0.2",
        "typescript": "^5.3.3",
        "ts-node": "^10.9.2",
        "nodemon": "^3.0.2",
        "jest": "^29.7.0",
        "ts-jest": "^29.1.1",
        "supertest": "^6.3.3",
        "eslint": "^8.56.0",
        "@typescript-eslint/eslint-plugin": "^6.15.0",
        "@typescript-eslint/parser": "^6.15.0"
    },
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=9.0.0"
    }
}